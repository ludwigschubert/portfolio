!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Ludwig Schubert"
    %meta{name: "description", content: "Ludwig Schubert's personal portfolio website"}

    = stylesheet_link_tag "main"

  %body{class: page_classes}
    .wrap
      .container.outer-container
        .row
          .col-sm-2.sidebar{ role: "complementary" }
            .row
              .col-xs-12
                = link_to '//:/', class: 'brand' do
                  .logo= sprockets.find_asset('logo-slim-black.svg').to_s
              .col-xs-12
                = link_to '//:/', class: 'brand' do
                  %p.title Ludwig Schubert
                - if content_for? :sidebar
                  = yield_content :sidebar
          .col-sm-10.col-sm-offset-2.main{ role: "main" }
            -# %section
            = yield
    %footer.sidebar-footer{ role: "contentinfo" }
      .container
        .row
          .col-sm-2.col-xs-6
            .information
              #nightmode 
              .clear{ style: 'clear: both;' }
              = link_to 'Information', '/information.html'

    /! JavaScript
    = javascript_include_tag "main"
