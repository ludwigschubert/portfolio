!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Ludwig Schubert"
    %meta{name: "description", content: "Ludwig Schubert's personal portfolio website"}

    = stylesheet_link_tag "main"

  %body{class: page_classes}
    /nav.navbar.navbar-inverse.navbar-static-top role="navigation"
    /  .container
    /    .navbar-header
    /      button.navbar-toggle.collapsed type="button" data-target="#navbar" data-toggle="collapse" aria-controls="navbar" aria-/expanded="false"
    /        span.sr-only Toggle navigation
    /        span.icon-bar
    /        span.icon-bar
    /        span.icon-bar
    /      = link_to "Middleman", ".", class: "navbar-brand"
    /    #navbar.collapse.navbar-collapse
    /      ul.nav.navbar-nav
    /        li.active= link_to "Home", "#"
    /        li= link_to "About", "#about"
    /        li= link_to "Contact", "#contact"

    /header role="banner"
    /  .container
    /    .jumbotron
    /      h1= current_page.data.title
    /      p= link_to "Read Online Documentation", "http://middlemanapp.com/"

    .wrap
      .container
        .row
          %aside.sidebar.col-sm-2{ role: "complementary" }
            .col-sm-12
              %a.pull-right
                .logo= image_tag 'logo-slim-black.svg'
                %p.title Ludwig Schubert
            .col-sm-12
              %nav.filters{ role: "navigation" }
                %ul
                  %li.filter
                    = link_to "All", "#all"
                  %li.filter
                    = link_to "Photography", "#photography"
                  %li.filter
                    = link_to "Development", "#development"
                  %li.filter
                    = link_to "Design", "#design"
            -# .col-sm-12
            %footer.sidebar-footer{ role: "contentinfo" }
              = link_to "Information", "#information"
              -# %small &copy;
          .col-sm-9.col-sm-offset-2
            %main{ role: "main" }
              %section
                = yield



      #page-content-wrapper





    /! JavaScript
    = javascript_include_tag "main"
