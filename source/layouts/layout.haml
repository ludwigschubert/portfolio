!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Ludwig Schubert"
    %meta{name: "description", content: "Ludwig Schubert's personal portfolio website"}

    = stylesheet_link_tag "main"

  %body{class: page_classes}
    .wrap
      .container
        .row
          %aside.sidebar.col-sm-2{ role: "complementary" }
            .col-sm-12
              = link_to '//:/', class: 'pull-right' do
                .logo= image_tag 'logo-slim-black.svg'
                %p.title Ludwig Schubert
            .col-sm-12
              - if content_for? :sidebar
                = yield_content :sidebar
          .col-sm-10.col-sm-offset-2
            %main{ role: "main" }
              %section
                = yield
    %footer.sidebar-footer{ role: "contentinfo" }
      .container
        .row
          .col-sm-2.information
            = link_to "Information", "#information"
            -# %small &copy;




    /! JavaScript
    = javascript_include_tag "main"
